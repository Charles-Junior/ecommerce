{% extends "base.html.twig" %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="span3">
        {{parent()}}
        </div>
        <div class="span9">
                    <h3>Mes commandes</h3>
                    <hr>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Référence</th>
                                <th>Date</th>
                                <th>Prix (€)</th>
                            </tr>
                        </thead>
                        <tbody>

                        {% for infos in infos %}
                            <tr>
                                <td> 
                                    {{ infos.id }}
                                </td>
                                <td>
                                    {{ infos.date|date("d/m/Y") }}
                                </td>
                                <td>
                                              
                                </td>
                                <td>
                                    <a href="{{ path('detailsCommandes', {'id':infos.id}) }}">Plus d'informations</a>
                                </td>

                               
                            </tr>
                        {% endfor %}    
                        </tbody>
                    </table>
        </div>            
    </div>
</div>        
        {% endblock %}

 {% block footer %}
        {{ parent() }}
    {% endblock %}