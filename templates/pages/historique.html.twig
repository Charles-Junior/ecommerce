{% extends "base.html.twig" %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="span3">
        {{parent()}}
        </div>
        <div class="span9">
                    <h3>Mes produits</h3>
                    <hr>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Nom</th>
                                <th>Catégorie</th>
                                <th>Description</th>
                                <th>Prix</th>
                                <th>Taxe</th>
                                <th>Date</th>
                                <th>Modifier</th>
                                <th>Supprimer</th>
                            </tr>
                        </thead>
                        <tbody>

                        {% for produits in produits %}
                            <tr>
                                <td>
                                    <img src="{{ produits.image.url }}" alt="{{ produits.image.alt }}" width="100" height="100">
                                </td>
                                <td> 
                                    {{ produits.name }}
                                </td>
                                <td>
                                    {{ produits.categorie.name}}
                                </td>
                                <td>
                                    {{ produits.content}}
                                </td>
                                <td>
                                    {{ produits.prix}} €/Kg
                                </td>
                                <td>
                                    {{ produits.tva.nom}} %
                                </td>
                                <td>
                                    {{ produits.date|date("d/m/Y") }}
                                </td>
                                <td>
                                    <a href="{{ path('update',{'id': produits.id}) }}"><i class="icon-edit"></i></a>
                                </td>
                                <td>
                                    <a href="{{ path('delete',{'id': produits.id}) }}"><i class="icon-trash"></i></a>
                                </td>
                            </tr>
                        {% endfor %}    
                        </tbody>
                    </table>
        </div>            
    </div>
</div>        
        {% endblock %}

 {% block footer %}
        {{ parent() }}
    {% endblock %}